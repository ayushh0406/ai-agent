# ARIA Smart Assistant Configuration
# Copy this to .env and add your actual API keys

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Voice Settings
TTS_ENABLED=true
VOICE_LANGUAGE=en-US

# Assistant Personality
ASSISTANT_NAME=ARIA
ASSISTANT_PERSONALITY=professional_friendly

# Advanced Features
MEMORY_ENABLED=true
CONTEXT_RETENTION=true
SMART_SUGGESTIONS=true

# File Management
AUTO_ORGANIZE=false
BACKUP_ENABLED=true

# Logging
LOG_CONVERSATIONS=true
LOG_LEVEL=INFO
